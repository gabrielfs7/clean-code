<?xml version="1.0" encoding="UTF-8"?>
<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<!-- https://phpunit.de/manual/current/pt_br/index.html -->
<!-- https://phpunit.de/manual/current/pt_br/organizing-tests.html#organizing-tests.xml-configuration -->
<!-- Possible configurations: https://phpunit.de/manual/current/pt_br/appendixes.configuration.html -->
<phpunit
    xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation = "http://schema.phpunit.de/4.6/phpunit.xsd"
    beStrictAboutTestsThatDoNotTestAnything = "true"
    checkForUnintentionallyCoveredCode = "true"
    beStrictAboutOutputDuringTests = "true"

    beStrictAboutTestSize = "true"
    timeoutForLargeTests = "1"
    timeoutForMediumTests = "1"
    timeoutForSmallTests = "1"

    backupGlobals = "false"
    backupStaticAttributes = "false"
    colors = "true"
    convertErrorsToExceptions = "true"
    convertNoticesToExceptions = "true"
    convertWarningsToExceptions = "true"
    processIsolation = "false"
    stopOnFailure = "false"
    syntaxCheck = "false"
    bootstrap = "bootstrap.php">
    <testsuites>
        <testsuite name="CleanCode Test Suite">
            <directory>test</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src/</directory>
            <exclude>
                <directory>src/GSoares/CleanCode/Application</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log
            type="coverage-html"
            target="public/phpunit"
            charset="UTF-8"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"/>
        <log
            type="testdox-html"
            target="public/phpunit/testdox.html"
            charset="UTF-8"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"/>
    </logging>
</phpunit>