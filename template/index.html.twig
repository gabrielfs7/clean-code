{% extends 'base/base.html.twig' %}
{% block title %}<i class="glyphicon glyphicon-dashboard"></i> Dashboard{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-sm-4">
            <div class="thumbnail text-center" style="font-size: 100px">
                <i class="glyphicon glyphicon-user"></i>
                <div class="caption">
                    <h3>{{ totalAccounts }} accounts</h3>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="thumbnail text-center" style="font-size: 100px">
                <i class="glyphicon glyphicon-usd"></i>
                <div class="caption">
                    <h3>{{ totalEntries|format() }} entries</h3>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="thumbnail text-center" style="font-size: 100px">
                <i class="glyphicon glyphicon-signal"></i>
                <div class="caption">
                    <h3>$ {{ average }}/account</h3>
                </div>
            </div>
        </div>
    </div>
{% endblock %}